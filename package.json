{
  "name": "lyricistant",
  "productName": "Lyricistant",
  "displayName": "Lyricistant",
  "version": "0.0.3",
  "license": "GPL-3.0-or-later",
  "description": "An app that helps you to write the lyrics you want to!",
  "author": {
    "name": "Wardell Bagby",
    "email": "dev@wardellbagby.com"
  },
  "repository": {
    "type": "git",
    "url": "git://https://github.com/wardellbagby/rhymer.git"
  },
  "homepage": "https://github.com/wardellbagby/rhymer",
  "main": "out/js/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "postinstall": "electron-builder install-app-deps",
    "start": "npm run build && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-all": "electron-builder --win --mac --linux && node bin/remove_unneeded_artifacts.js"
  },
  "build": {
    "appId": "com.wardellbagby.lyricistant",
    "artifactName": "Lyricistant.${ext}",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis"
    }
  },
  "engines": {
    "node": ">= 12.10"
  },
  "devDependencies": {
    "electron": "^7.1.2",
    "electron-builder": "^22.2.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typestrict": "^1.0.2"
  },
  "dependencies": {
    "datamuse": "^1.0.5",
    "monaco-editor": "^0.19.0",
    "monaco-loader": "^1.0.0",
    "rxjs": "^6.5.3",
    "syllable": "^4.0.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  }
}
